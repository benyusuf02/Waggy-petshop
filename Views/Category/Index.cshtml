@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;


        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a onclick="youSure(@item.CategoryId)" class="text-white btn btn-danger">  Sil  <i class="ti ti-trash"></i> </a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle <i class="ti ti-pencil"></i> </a>
            </td>
        </tr>
    }


</table>

<br />
<a href="/Category/AddCategory" class="btn btn-primary"> Yeni Kategori <i class="ti ti-circle-plus align-middle"></i></a>

<script>
    function youSure(id){

      Swal.fire({
      title: "Emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, sil!",
      cancelButtonText: "İptal!"
    }).then((result) => {
      if (result.isConfirmed) {

        window.location.href="/Category/DeleteCategory/"+id;
      }
    });
    }

</script>
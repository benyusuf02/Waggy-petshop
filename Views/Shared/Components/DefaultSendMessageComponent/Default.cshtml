@model Message
@*
  Send Message
*@


<section id="register" style="background: url('~/waggy-1.0.0/images/background-img.png') no-repeat;">
    <div class="container ">
        <div class="row my-5 py-5">
            <div class="offset-md-3 col-md-6 my-5 ">
                <h2 class="display-3 fw-normal text-center">
                    Bizimle <span class="text-primary">İletişime Geçin</span>
                </h2>
                <form method="post" asp-action="SendMessage" asp-controller="Default" >
                    <div class="mb-3">
                        <input type="text" class="form-control form-control-lg" asp-for="Name"
                               placeholder="İsim Soyisim" required>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control form-control-lg" asp-for="Email"
                               placeholder="Mailiniz" required>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control form-control-lg" asp-for="Subject"
                               placeholder="Konu" required>
                    </div>
                    <div class="mb-3">
                        <textarea type="text" class="form-control form-control-lg" asp-for="MessageBody" 
                               placeholder="Mesajınız.." required></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" onclick="sendMessage()" class="btn btn-dark btn-lg rounded-1">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    function sendMessage(){

      Swal.fire({
      title: "Tebrikler!",
      text: "Mesajınız başarıyla gönderildi!",
      icon: "succes",
      showCancelButton: false,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Tamam"
    }).then((result) => {
      if (result.isConfirmed) {

        window.location.href="/Default/Index/";
      }
    });
    }

</script>